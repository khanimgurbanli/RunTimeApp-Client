@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Application</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
    <script src="~/auth/chat/script.js"></script>

    <!-- Main css -->
    <link rel="stylesheet" href="~/auth/chat/style.css">
</head>

<body>
    <div id="chat-container">
        <div id="status"></div>
        <div id="messages">
            <ul></ul>
        </div>
        <div style="display: flex; align-items: center;">
            <input type="text" id="txtMessage" placeholder="Type your message...">
            <button id="btnSend">Send</button>
        </div>
        <div>
            <h3 style="margin-top: 20px; margin-bottom: 10px;">Connected Clients</h3>
            <ul id="clients"></ul>
        </div>

        <!-- Task display section -->
        <div>
            <h3 style="margin-top: 20px; margin-bottom: 10px;">Your Tasks</h3>
            <ul id="userTasks"></ul>
        </div>
    </div>
</body>

</html>
